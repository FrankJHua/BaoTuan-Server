<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>tuan</display-name>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>com.tuan.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>Charset</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>loginFilter</filter-name>
    <filter-class>com.tuan.filter.LoginFilter</filter-class>
    <init-param>
      <param-name>userIdMaxLength</param-name>
      <param-value>30</param-value>
    </init-param>
    <init-param>
      <param-name>passwordLength</param-name>
      <param-value>32</param-value>
    </init-param>
  </filter>
  <filter>
  	<filter-name>signupFilter</filter-name>
  	<filter-class>com.tuan.filter.SignupFilter</filter-class>
  	<init-param>
  		<param-name>mailboxMaxLength</param-name>
  		<param-value>30</param-value>
  	</init-param>
  	<init-param>
  		<param-name>passwordLength</param-name>
  		<param-value>32</param-value>
  	</init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>/user/login</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>signupFilter</filter-name>
  	<url-pattern>/user/signup</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>userServlet</servlet-name>
    <servlet-class>com.tuan.controller.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>userServlet</servlet-name>
    <url-pattern>/user/login</url-pattern>
    <url-pattern>/user/signup</url-pattern>
  </servlet-mapping>
</web-app>